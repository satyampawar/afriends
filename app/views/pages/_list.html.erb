<div class="pages-header">your pages</div>
<%current_user.pages.flatten.each do |p|%>
<div class="col-md-12" style="padding-left:4px;padding-right:4px;">
	<%case p.page_type%>
		<% when 'inst'%>
			<%= page_inst_helper(p) %>
		<%when 'movi'%>
     <%= page_movie_helper(p) %>
		<%end%>
</div>
<hr style="width: 100%;height: 0.5px; background-color: black; margin-bottom:3px;">
<% end %>
<style type="text/css">
	.pages-header{
		background: teal;
		color: white;
		text-align: center;
		font-size: 18px;
		font-weight: 700;
		margin-bottom: 2px;
	}
</style>