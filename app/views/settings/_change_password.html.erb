<%= form_tag change_password_user_settings_path(current_user) do %>
<div class='form-group'>
	<%= label_tag 'Current Password',nil,class: 'col-md-3 control-label'%>

<div class='col-md-9'>
	<%= password_field_tag 'current_password',nil ,class: 'form-control'%>
</div>
</div>
<div class="clearfix"></div>
<div class='form-group'>
	<%= label_tag 'New Password',nil, class: 'col-md-3 control-label'%>

<div class='col-md-9'>
  <%= text_field_tag 'password',nil ,class: 'form-control'%>
</div></div>
<div class="clearfix"></div>
<div class='form-group'>
	<%= label_tag 'Repeat Password',nil,class: 'col-md-3 control-label'%>

<div class='col-md-9'>
	<%= password_field_tag 'password_confirmation',nil,class: 'form-control' %>
</div></div>
<div class="clearfix"></div>
<div class="form-group">
  <%= submit_tag "change"%>
  <a href="javaScript:void(0)" id="close_change_password">close</a>
</div>
<% end %>


<script>
  $("#close_change_password").click(function(){
  	$("#change_password_pane").html("");
  })
</script>