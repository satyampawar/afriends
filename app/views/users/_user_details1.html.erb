                      </tr>
                      <tr>
                        <td><i class=" 	glyphicon glyphicon-education"></i>&nbsp;School:</td>
                        <td>01/24/1988</td>
                      </tr>
                     <tr>

                        <td><i class=" 	glyphicon glyphicon-map-marker"></i>&nbsp;live at</td>
                        <td>Male</td>
                      </tr>
                        <tr>
                        <td><i class="glyphicon glyphicon-home"></i>&nbsp;Home town</td>
                        <td>Metro Manila,Philippines</td>
                      </tr>
                      <tr>
                        <td><i class="glyphicon glyphicon-phone"></i>&nbsp;Nationality</td>
                        <td>Metro Manila,Philippines</td>
                      </tr>
                      
                   
                      
                      
                     
                     
                    </tbody>
                  </table>
                  
</div>
<div id="edit_profile" class="edit_element_div" style="display: none;">
  <%=f.label :worked_at%>
  <%= f.text_field :worked_at, class: 'form-control' ,placeholder:"worked_at" %>
   <%=f.label :collage%>
  <%= f.text_field :collage,  class: 'form-control' ,placeholder:"collage name" %>
   <%=f.label :school%>
  <%= f.text_field :school,  class: 'form-control' ,placeholder:"school name" %>
   <%=f.label :llves%>
  <%= f.text_field :llves,   class: 'form-control' ,placeholder:"current city" %>
   <%=f.label :hometown%>
  <%= f.text_field :hometown,  class: 'form-control' , placeholder:"hometown " %>
    <%= f.submit "submit", :class => "btn btn-primary edit_element_div_btn" %>
</div>
<% end %>
<script>
$(document).ready(function(){
  $('.atc1').click(function(){

  $('.table').toggle();
