             :html =>{
                     :class => "user_detail"} do |f| %>
    <%= hidden_field_tag :div,"personal" %>
<%if current_user== @user1%>
<ul class="profl_btn pull-left">
  <li><a href="javascript:void(0);" class="atc1"><i class="fa
                  fa-pencil-square-o
                  "></i></a></li>
</ul>
<%end%>
<div class="clear"></div>
<div id="show_summary">
 	<table class="table new_table table-user-information ">
                 
                           
                      <tr>
                        <td><i class="glyphicon glyphicon-briefcase"></i>&nbsp;Worked at:</td>
                        <td></td>
                      </tr>
                      <tr>
                        <td><i class=" 	glyphicon glyphicon-education"></i>&nbsp;<br>Study at:</td>
